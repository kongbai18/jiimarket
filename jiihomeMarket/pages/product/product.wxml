<view class='box'>  
   <view class='swiper'>
     <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" style='height:550rpx' >
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
    </swiper> 
   </view>
   
   <view class='name-box'>
     <view id="name">HUNT椅 经典椅</view>
     <view id="price">￥888</view>
   </view>

   <view class='info-box'>
    <view id="info">单品信息</view>
