    <view class='attr'><text style='color:gray'>品类：</text>椅子</view>
    <view class='attr'><text style='color:gray'>品牌：</text>IKEA</view>
  </view>
  <view id="introduc"></view>
  <view id="question">常见问题<text style='float:right;padding-right:50rpx;color:gray;'>></text></view>
  
  <view id="{{addCart ? 'choose-box-show' :'choose-box'}}">
     <view id="goods">
        <view id='goods-img'><image src='/image/search.png' /></view>
        <view id='goods-name'>
           <view id='name'>Bruk 系列冷水杯</view>
           <view id='price'>￥88.00</view>
        </view>
        <view id='close' bindtap="closeCart">
           <image src='/image/close.png' style='width:40rpx;height:40rpx;' />
