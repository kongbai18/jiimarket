        </view>
     </view>
     <view id='submit'>
     <button formType="submit">确定</button>
     </view>
     </form>
  </view>

  <view id="bottom">
    <navigator url="/pages/index/index" open-type="switchTab" hover-class="navigator-hover">
    <view id="home"><image src='/image/home.png' style='width:80rpx;height:80rpx;padding:10rpx;' /></view>
    </navigator>
    <view id="service"><image src='/image/service.png' style='width:80rpx;height:80rpx;padding:10rpx;' /></view>
    <view id="cart" bindtap="addCart">加入购物车</view>
  </view>
</view>
