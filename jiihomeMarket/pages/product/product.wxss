.box{
  background: #f3f3f3;
}
.swiper{
  height:550rpx;
  width: 100%;
  background: red;
}
.slide-image{
  width:750rpx;
  height: 550rpx;
}
.name-box{
  height: 178rpx;
  background: white;
  margin-bottom: 40rpx;
}
#name{
  margin-left: 32rpx;
  height: 80rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  font-weight: bold;
}
#price{
  margin-left: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.info-box{
  height: 418rpx;
  background: white;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}
#info{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 35rpx;
}
#tag-box{
  margin: 10rpx auto;
}
.tag{
  height: 40rpx;
  border: 1rpx solid #f3f3f3;
  font-size: 28rpx;
  padding: 5rpx 20rpx;
  margin-right: 20rpx;
}
.attr{
  height: 60rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
#question{
  height: 90rpx;
  width: 750rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  padding-left: 32rpx;
  background: white;
  border-bottom: 120rpx solid #f3f3f3;
}
#bottom{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
}
#home{
  float: left;
  box-sizing: border-box;
  height: 100rpx;
  width: 100rpx;
  border: 1rpx solid #f3f3f3;
  background: white;
}
#service{
  float: left;
  box-sizing: border-box;
  height: 100rpx;
  width: 100rpx;
  border: 1rpx solid #f3f3f3;
  background: white;
}
#cart{
  float: left;
  box-sizing: border-box;
  height: 100rpx;
  width: 550rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  background: #ffc700;

}
#choose-box{
  display: none;
  z-index: 999;
  width: 100%;
  background: white;
  position: fixed;
  bottom: 0;
}
#choose-box-show{
  z-index: 999;
  width: 100%;
  background: white;
  position: fixed;
  bottom: 0;
}
#goods{
  overflow: hidden;
}
#goods-img{
  float: left;
  width: 148rpx;
  height: 148rpx;
  margin: 48rpx;
  background: red;
}
#goods-img image{
  width: 148rpx;
  height: 148rpx;
}
#goods-name{
  width: 406rpx;
  height: 148rpx;
  float: left;
  font-size: 32rpx;
  margin-top: 48rpx;
}
#name{
  margin-top: 0;
  padding-top: 0;
}
#price{
  padding-top: 0;
}
#close{
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.attr-box{
  margin-bottom: 60rpx;
}
.attr-name{
  font-size: 32rpx;
  margin: 0 48rpx 30rpx;
}
.attr-val{
  width: 750rpx;
}
.attr-val radio{
  display: none;
}
.attr-val text{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  padding: 10rpx 30rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 0 0 20rpx 48rpx;
}
#submit button{
  width: 100%;
  height: 100rpx;
  background: #ffc700;
}
